<h1><%= @cocktail.name %></h1>

<h3>Ingredients:</h3>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= "#{dose.ingredient.name.capitalize}: #{dose.description}" %>
    <%= link_to dose_path(dose), :method => :delete do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </li>
<% end %>
</ul>

<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %> |
<%= link_to "Delete cocktail", cocktail_path(@cocktail), :method => :delete %> |
<%= link_to "Other cocktails", cocktails_path %>
